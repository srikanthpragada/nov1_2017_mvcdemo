
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ajax")
    
    <script>
        function getDateTime() {
            $.get("/Ajax/Now", null, showDateTime);
        }

        function showDateTime(result) {
            $("#datetime").html(result);
        }
    </script>
</head>
<body>
    <h1>Ajax with jQuery Demo</h1>
    <button onclick="getDateTime()">Show Date and Time</button>
    <h1 id="datetime"></h1>

    <h1>Ajax with Ajax Helper</h1>
    @Ajax.ActionLink("Show Date and Time","Now", new AjaxOptions {  UpdateTargetId = "now"})
    <h1 id="now"></h1>

    <h1>Ajax with Ajax Form</h1>
    @using (Ajax.BeginForm("Add", new AjaxOptions { UpdateTargetId = "sum" }))
    {
      <div>First Number</div>
      <input name="first" id="first" type="text" />
      <p/>
      <div>Second Number</div>
      <input name="second" id="second" type="text" />
      <p/>
      <input type="submit" value="Add Numbers" />
      <p/>
      <h1 id="sum"></h1>
    }

    <h1>Ajax with Ajax Form and Partial View</h1>
    @using (Ajax.BeginForm("Factors", new AjaxOptions { UpdateTargetId = "factors" }))
    {
        <span>Number</span><input name="number" id="number" type="text" />
        <p />
        <input type="submit" value="Get Factors" />
        <p />
        <div id="factors"></div>
    }
    





</body>
</html>
